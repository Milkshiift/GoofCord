  "bugs": {
    "url": "https://github.com/Milkshiift/GoofCord/issues"
  },
  "homepage": "https://github.com/Milkshiift/GoofCord",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.0",
    "@types/stegcloak": "^1.0.2",
    "electron": "^33.2.1",
    "electron-builder": "26.0.0-alpha.6",
    "ts-morph": "^24.0.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "arrpc": "github:Milkshiift/arrpc",
    "auto-launch": "^5.0.6",
    "electron-context-menu": "github:Milkshiift/electron-context-menu",
    "jimp": "^1.6.0",
    "picocolors": "^1.1.1",
    "stegcloak": "github:Milkshiift/stegcloak-node",
    "v8-compile-cache": "^2.4.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "bufferutil",
    "electron",
    "esbuild",
    "msgpackr-extract",
    "sharp"
  ],
  "engines": {
    "node": ">=21.0.0"
  },
  "type": "module"
}
