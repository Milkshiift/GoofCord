    "@vencord/venmic": "^6.1.0",
    "venbind": "0.1.7"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "bufferutil",
    "electron",
    "esbuild",
    "arrpc"
  ],
  "engines": {
    "node": ">=21.0.0"
  },
  "type": "module"
}
